<?xml version="1.0" encoding="UTF-8"?>
<Facade>
    <!-- 颜色值支持十进制数值，或0x开头的十六进制数值 ；
        建议避免 0 或 255；
    -->
    <!-- 一般窗口的公共配置
        background 背景色
        foreground 前景色
     -->
    <Widget background="0xD0D0D0" foreground="0x010101"/>

    <!-- 按钮可设置背景色，或不设置，作透明处理； 
        图片可设置边界，作九宫格缩放；否则整体缩放；
        可单独设置文本颜色；
    -->
    <LineEdit background="0x45774F" border-radius="4px" height="25px" border="1px" solid="red"/>
    <CheckBox background="0xC0C0C0" spacing="5px"/>
  
    <TabWidget background="0x235F62"/>
    <RadioButton background="0x582E5C" spacing="5px" />
    <Label background="0xC0C0C0" border="10px transparent">主页.png</Label>
    <TextEdit background="0xA6FAF1" color="3C8C7A" border="1px" solid-color="70286D"/>
    <Button>
        <Normal background="0xC0C0C0" left="20" top="20" right="20" bottom="20" text_color="0x010101">btn_normal.png</Normal>
        <Press background="0xC0C0C0" left="20" top="20" right="20" bottom="20" text_color="0x010101">btn_press.png</Press>
        <Disabled background="0xC0C0C0" left="20" top="20" right="20" bottom="20" text_color="0x010101">btn_disabled.png</Disabled>
    </Button>


   

  
    
    

    <ListWidget> 
        <Father background="0xC0C0C0" border="3px solid gray"/>
        <Item >
            <Normal color="0x45774F" height="20px" border="0px solid gray"/>
            <Hover color="0x362F5A"/>
            <Selec color="0xE0B31C"/>
        </Item>
    </ListWidget>

</Facade>